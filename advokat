<body>
  <div class="chat" id="chat"></div>

  <div class="input-box">
    <input id="msg" type="text" placeholder="Escribe un mensaje..." autocomplete="off" />
    <button id="send">Enviar</button>
  </div>

  <script>
    const chat = document.getElementById("chat");
    const input = document.getElementById("msg");
    const send = document.getElementById("send");
    const WEBHOOK = "https://n8n-n8n.dts4ar.easypanel.host/webhook-test/3879389e-9d57-4198-a403-c95b42860834";

    function addBubble(text, from = "bot", typing = false) {
      const div = document.createElement("div");
      div.classList.add("bubble", from);
      div.style.whiteSpace = "pre-line";
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;

      if (typing) {
        let i = 0;
        const speed = 15;
        function typeChar() {
          if (i < text.length) {
            div.textContent += text.charAt(i);
            i++;
            chat.scrollTop = chat.scrollHeight;
            setTimeout(typeChar, speed);
          }
        }
        typeChar();
      } else {
        div.textContent = text;
      }
    }

    async function sendMessage() {
      const text = input.value.trim();
      if (!text) return;
      addBubble(text, "user");
      input.value = "";
      const typing = addBubble("Escribiendo...", "bot");

      try {
        const res = await fetch(WEBHOOK, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message: text })
        });

        const raw = await res.text();
        let reply = raw;
        try { const data = JSON.parse(raw); reply = data.reply || data.text || data.data || JSON.stringify(data); } catch {}
        typing.remove();
        addBubble(reply || "Sin respuesta del servidor.", "bot", true);

      } catch (err) {
        typing.remove();
        addBubble("Error de conexiÃ³n con el servidor.", "bot");
      }
    }

    send.addEventListener("click", sendMessage);
    input.addEventListener("keydown", e => {
      if (e.key === "Enter" && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });
  </script>
</body>
</html>
